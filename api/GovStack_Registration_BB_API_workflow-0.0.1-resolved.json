{
	"openapi": "3.0.0",
	"info": {
		"title": "Registration Building Block API for Applicant user services",
		"description": "Applicant can see tasks and submit new applications to the Registration BB.  
	 1. get all files of a user; 2. get all available services for a user - this would include a form schema ID needed for each service; 3.  get all form schemas/ get a specific form schema; 4. submit a new file : this will require a dynamic data object that should match the needed form schema",
		"termsOfService": "#",
		"contact": {
			"email": "ingmar.vali@gmail.com"
		},
		"license": {
			"name": "Apache 2.0",
			"url": "http://www.apache.org/licenses/LICENSE-2.0.html"
		},
		"version": "0.0.1"
	},
	"servers": [{
		"url": "http://ss2.egovstack.net/r1/eGovStack/COM/11222456/RegistrationBB/creg/",
		"description": "Information Mediator BB Security server"
	}],

	"paths": {





		"/api/task": {
			"get": {
				"tags": ["applicant-task"],
				"summary": "Retrieve all applicant tasks (application files)",
				"description": "Returns task list",
				"operationId": "getTasks",
				"parameters": [{
						"$ref": "#/components/parameters/Information-Mediator-Client"
					},
					{
						"name": "processInstanceId",
						"description": "Service ID",
						"in": "query",
						"required": false,
						"schema": {
							"type": "string",
							"example": "42962de0-bdb2-11ed-9397-0242ac120004"
						}
					},
					{
						"name": "applicantId",
						"description": "Applicant user ID",
						"in": "query",
						"required": false,
						"schema": {
							"type": "string",
							"example": "42962de0-bdb2-11ed-9397-0242ac120004"
						}
					},
					{
						"name": "firstResult",
						"in": "query",
						"description": "Pagination of results. Specifies the index of the first result to return.",
						"schema": {
							"type": "integer",
							"example": 1
						}
					}, {
						"name": "maxResult",
						"in": "query",
						"description": "Pagination of results. Specifies the maximum number of results to return. Will return less results if there are no more results left.",
						"schema": {
							"type": "integer",
							"example": 10
						}
					}, {
						"name": "sortBy",
						"in": "query",
						"description": "Sort the results lexicographically by a given criterion. Valid values are instanceId, caseInstanceId, dueDate, executionId, caseExecutionId,assignee, created, description, id, name, nameCaseInsensitive and priority. Must be used in conjunction with the sortOrder parameter.",
						"schema": {
							"type": "string",
							"example": "created"
						}
					}, {
						"name": "sortOrder",
						"in": "query",
						"description": "Sort the results in a given order. Values may be asc for ascending order or desc for descending order. Must be used in conjunction with the sortBy parameter.",
						"schema": {
							"type": "string",
							"example": "asc"
						}
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"*/*": {
								"schema": {
									"type": "array",
									"items": {
										"$ref": "#/components/schemas/ApplicantTaskResponse"
									}
								}
							}
						}
					}
				}
			}
		},





		"/api/applicant/task/{id}/sign-form": {
			"post": {
				"tags": ["operator-task-controller"],
				"summary": "Process and complete applicant task by id",
				"operationId": "processApplicantForm",
				"parameters": [{
						"$ref": "#/components/parameters/Information-Mediator-Client"
					},

					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/FormDataDto"
							}
						}
					},
					"required": true
				},
				"responses": {
					"500": {
						"description": "Internal server error",
						"content": {
							"*/*": {
								"schema": {
									"$ref": "#/components/schemas/SystemErrorDto"
								}
							}
						}
					},
					"422": {
						"description": "Task was not verified",
						"content": {
							"*/*": {
								"schema": {
									"$ref": "#/components/schemas/ValidationErrorDto"
								}
							}
						}
					},
					"200": {
						"description": "Task successfully signed and completed",
						"content": {
							"*/*": {
								"schema": {
									"$ref": "#/components/schemas/CompletedTaskResponse"
								}
							}
						}
					},
					"404": {
						"description": "Task was not found",
						"content": {
							"*/*": {
								"schema": {
									"$ref": "#/components/schemas/SystemErrorDto"
								}
							}
						}
					}
				}
			}
		},



		"/api/task/{id}": {
			"get": {
				"tags": ["applicant-task"],
				"summary": "Get task by  id",
				"description": "Returns list of tasks by  task id",
				"operationId": "getTaskById",
				"parameters": [{
						"$ref": "#/components/parameters/Information-Mediator-Client"
					},
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string",
							"example": "8a70cd6d-bdb2-11ed-9397-0242ac120004"
						}
					}
				],
				"responses": {
					"200": {
						"description": "Returns task by id",
						"content": {
							"*/*": {
								"schema": {
									"$ref": "#/components/schemas/SignableDataUserTaskResponse"
								}
							}
						}
					},
					"404": {
						"description": "Task was not found",
						"content": {
							"*/*": {
								"schema": {
									"$ref": "#/components/schemas/SystemErrorDto"
								}
							}
						}
					}
				}
			}
		}
	},
	"components": {

		"parameters": {
			"Information-Mediator-Client": {
				"in": "header",
				"name": "Information-Mediator-Client",
				"example": "eGovStack/GOV/90000009/digitalregistries",
				"description": "Format is: INSTANCE/CLASS/MEMBER/SUBSYSTEM",
				"schema": {
					"type": "string"
				},
				"required": true
			}
		},
		"schemas": {
			"FormDataDto": {
				"type": "object",
				"properties": {
					"data": {
						"type": "object",
						"additionalProperties": {
							"type": "object"
						}
					},
					"decision": {
						"type": "string",
						"example": "approve"
					},
					"x-access-token": {
						"type": "string"
					}
				}
			},
			"SystemErrorDto": {
				"type": "object",
				"properties": {
					"traceId": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"code": {
						"type": "string",
						"example": "4006"
					},
					"message": {
						"type": "string",
						"example": "Something is wrong with the data, please check one more time."
					},
					"localizedMessage": {
						"type": "string",
						"example": "error"
					}
				}
			},
			"ErrorDetailDto": {
				"type": "object",
				"properties": {
					"message": {
						"type": "string",
						"example": "Something is wrong with the data, please check one more time."
					},
					"field": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"value": {
						"type": "string",
						"example": "test ABC"
					}
				}
			},
			"ErrorsListDto": {
				"type": "object",
				"properties": {
					"errors": {
						"type": "array",
						"items": {
							"$ref": "#/components/schemas/ErrorDetailDto"
						}
					}
				}
			},
			"ValidationErrorDto": {
				"type": "object",
				"properties": {
					"traceId": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"code": {
						"type": "string",
						"example": "6008"
					},
					"message": {
						"type": "string",
						"example": "Something is wrong with the data, please check one more time."
					},
					"details": {
						"$ref": "#/components/schemas/ErrorsListDto"
					}
				}
			},
			"CompletedTaskResponse": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"example": "8a70cd6d-bdb2-11ed-9397-0242ac120004"
					},
					"processInstanceId": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"rootProcessInstanceId": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"rootProcessInstanceEnded": {
						"type": "boolean",
						"example": "true"
					},
					"variables": {
						"type": "object",
						"additionalProperties": {
							"$ref": "#/components/schemas/VariableValueResponse"
						}
					}
				}
			},
			"VariableValueResponse": {
				"type": "object",
				"properties": {
					"type": {
						"type": "string",
						"example": "Abc"
					},
					"value": {
						"type": "object",
						"example": "Test"
					},
					"valueInfo": {
						"type": "object",
						"additionalProperties": {
							"type": "object"
						}
					}
				}
			},
			"ApplicantTaskResponse": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"example": "8a70cd6d-bdb2-11ed-9397-0242ac120004"
					},
					"taskDefinitionKey": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"name": {
						"type": "string",
						"example": "Application xyz"
					},
					"assignee": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"status": {
						"type": "string",
						"example": "PENDING"
					},

					"applicantId": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},



					"created": {
						"type": "string",
						"format": "date-time",
						"example": "2000-10-23T00:00:00.000Z",
						"description": "Time when the application file was created by the user"
					},
					"registered": {
						"type": "string",
						"format": "date-time",
						"example": "2000-10-23T00:00:00.000Z",
						"description": "Time when the application file was registered in the Registration BB system"
					},

					"description": {
						"type": "string",
						"example": "Any text."
					},
					"processDefinitionName": {
						"type": "string",
						"example": "Post partum registration service"
					},
					"processInstanceId": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"processDefinitionId": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"formKey": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"suspended": {
						"type": "boolean",
						"example": "true"
					},
					"businessKey": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"Results": {
						"type": "string",
						"example": "todo"
					}
				}
			},
			"SignableDataUserTaskResponse": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"taskDefinitionKey": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"name": {
						"type": "string",
						"example": "John Smith"
					},
					"assignee": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"created": {
						"type": "string",
						"format": "date-time",
						"example": "2000-10-23T00:00:00.000Z"
					},
					"description": {
						"type": "string",
						"example": "Any text"
					},
					"processInstanceId": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"processDefinitionId": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"processDefinitionName": {
						"type": "string",
						"example": "Post partum registration service"
					},
					"formKey": {
						"type": "string",
						"example": "42962de0-bdb2-11ed-9397-0242ac120004"
					},
					"suspended": {
						"type": "boolean",
						"example": "true"
					},
					"formVariables": {
						"type": "object",
						"additionalProperties": {
							"type": "object"
						}
					},
					"decisionValidationPack": {
						"uniqueItems": true,
						"type": "array",
						"items": {
							"type": "string",
							"enum": ["pending", "approve", "sendBack", "reject"]
						}
					},
					"data": {
						"type": "object",
						"additionalProperties": {
							"type": "object"
						}
					}
				}
			}
		}
	}
}
